<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_RecycledJndTrabajadores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRecycledJndWorkers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_EmpezarJornada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:text="Empezar Jornada" />

            <Button
                android:id="@+id/btn_TerminarJornada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:text="Terminar jornada" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJndTrabajadores"
            android:layout_width="match_parent"
            android:layout_height="550dp">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btn_BorrarSeleccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/btn_green"
            android:text="Borrar seleccion" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>